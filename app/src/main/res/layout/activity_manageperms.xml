<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/teal_200">


    <ImageView
        android:id="@+id/imageV1"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="#000000"/>

    <Button
        android:id="@+id/cameraPermButton"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Camera Permissions"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/imageV2"
        android:layout_margin="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="#000000"/>

    <Button
        android:id="@+id/internetPermButton"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Internet Permissions"
        android:background="@color/white"/>

    <Button
        android:id="@+id/vibratePermButton"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Vibration Permissions"
        android:background="@color/white"/>

</LinearLayout>